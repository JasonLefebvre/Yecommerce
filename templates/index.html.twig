<html lang="en">

<head>
    <meta charset="UTF-8">
     <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    <title>Inscription</title>
    


    {% block javascripts %}
        {% block importmap %}
            {{ importmap('app') }}
        {% endblock %}
    {% endblock %}
</head>
{% include 'navbar.hmtl.twig' %}
<body>
    
    <div class="container mt-4">
        <div class="row">
            {% for article in articles %}
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="{{ path('article_image', {'id': article.id}) }}" class="card-img-top img-fluid" style="height: 200px; object-fit: cover;" alt="{{ article.nom }}">
                    <div class="card-body">
                        <h5 class="card-title">{{ article.nom }}</h5>
                        <p class="card-text">{{ article.description }}</p>
                        <p class="card-text text-success fw-bold">{{ article.prix }} €</p>
                        <p class="card-text"><small class="text-muted">Publié le {{ article.datePublication|date("d/m/Y") }}</small></p>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>

</body>
</html>
