<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    {% block stylesheets %}{% endblock %}
    <title>{% block title %}LePireCoin{% endblock %}</title>
    {% block javascripts %}
        {% block importmap %}
            {{ importmap('app') }}
        {% endblock %}
    {% endblock %}
</head>
<body>
{% block body %}
    <header class="p-3 bg-dark text-white">
    <div class="container">
      <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
        <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
          LePireCoin
        </a>

        <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
          <li><a href="/" class="nav-link px-2 text-secondary">Accueil</a></li>
          <li><a href="/sell" class="nav-link px-2 text-white">Vendre</a></li>
          <li><a href="/cart" class="nav-link px-2 text-white">Panier</a></li>
          <li><a href="/account/{{ user.id }}" class="nav-link px-2 text-white">Compte</a></li>
        </ul>

        <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3">
          <input type="search" class="form-control form-control-dark" placeholder="Search..." aria-label="Search">
        </form>

        <div class="text-end">
          <button type="button" action="/Login" class="btn btn-outline-light me-2" onclick="window.location.href='{{ path('app_login') }}'">Connexion</button>
          <button type="button" class="btn btn-warning" onclick="window.location.href='{{ path('app_register') }}'">Inscription</button>

        </div>
      </div>
    </div>
  </header>
        <div class="articles">
            {% for article in articles %}
            <div class="article">
                <img src="{{ article.picture }}" alt="images">
                <div>{{ article.nom }}</div>
                <div>{{ article.description }}</div>
                <div>{{ article.prix }}â‚¬</div>
                <div>{{ article.datePublication|date("d/m/Y") }}</div>
{#                <img src="{{ article.auteur.profilPicture }}" alt="pdp">#}
{#                <div><a href="/account/{{ article.auteur.id }}">{{ article.auteur.username }}</a></div>#}
            </div>
            {% endfor %}
        </div>
    {% endblock %}
</body>
</html>