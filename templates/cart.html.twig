<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Votre Panier</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>üõí</text></svg>">

    {% block javascripts %}
        {% block importmap %}
            {{ importmap('app') }}
        {% endblock %}
    {% endblock %}
</head>

<body>
{% include 'navbar.html.twig' %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4 text-center">üõç Votre Panier</h1>

    {% if cartItems is not empty %}
        <div class="row">
            {% for articleId, item in cartItems %}
                <div class="col-md-6 mb-4">
                    <div class="card shadow-sm">
                        <div class="row g-0">
                            <div class="col-md-4">
                                <img src="{{ path('article_image', {'id': articleId}) }}" 
                                     class="img-fluid rounded-start" 
                                     alt="{{ item.article.nom }}" 
                                     style="height: 100%; object-fit: cover;">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title">{{ item.article.nom }}</h5>
                                    <p class="card-text">
                                        Quantit√© : <strong>{{ item.quantity }}</strong> <br>
                                        Prix unitaire : <strong>{{ item.article.prix }}‚Ç¨</strong>
                                    </p>
                                    <div class="btn-group" role="group">
                                        <form action="{{ path('cart_add', {'id': articleId}) }}" method="post">
                                            <button type="submit" class="btn btn-sm btn-success">+</button>
                                        </form>
                                        <form action="{{ path('cart_remove', {'id': articleId}) }}" method="post">
                                            <button type="submit" class="btn btn-sm btn-danger">-</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        <!-- Total -->
        <div class="mt-4 text-end">
            <h3>Total: <span class="text-success fw-bold">{{ total }}‚Ç¨</span></h3>
        </div>

        <!-- Bouton Valider -->
        <div class="mt-3 text-end">
            <a href="{{ path('validate') }}" class="btn btn-lg btn-warning">Valider la commande</a>
        </div>
    {% else %}
        <div class="alert alert-warning text-center" role="alert">
            üõí Votre panier est vide.
        </div>
    {% endif %}
</div>
{% endblock %}


</body>
</html>
